<Page x:Class="shop.Pages.UserOrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:shop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Мои заказы">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#FFEC9DFF">
            <Button Content="Каталог" Click="Catalog_Click" Style="{StaticResource MenuButton}"/>
            <Button Content="Корзина" Click="Cart_Click" Style="{StaticResource MenuButton}"/>
            <Button Content="Мои заказы" Style="{StaticResource MenuButton}" FontWeight="Bold"/>
            <Button Content="Выйти" Click="Logout_Click" Style="{StaticResource MenuButton}" HorizontalAlignment="Right"/>
        </StackPanel>

        <!-- Список заказов -->
        <ListView Grid.Row="1" x:Name="OrdersListView" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Номер" DisplayMemberBinding="{Binding Id}" Width="80"/>
                    <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding Date, StringFormat=dd.MM.yyyy}" Width="120"/>
                    <GridViewColumn Header="Статус" Width="150" DisplayMemberBinding="{Binding Status}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>