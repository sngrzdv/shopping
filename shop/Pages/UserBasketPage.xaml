<Page x:Class="shop.Pages.UserBasketPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:shop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Корзина">

    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхнее меню -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Background="#8800cc">
            <Button Content="Товары" Style="{StaticResource MenuButton}" Click="BtnProducts_Click" Foreground="#FFEC9DFF"/>
            <Button Content="Заказы" Style="{StaticResource MenuButton}" Click="BtnOrders_Click" Foreground="#FFEC9DFF"/>
            <Button Content="Пользователи" Style="{StaticResource MenuButton}" Click="BtnUsers_Click" Foreground="#FFEC9DFF"/>
            <Button Content="Выход" Style="{StaticResource MenuButton}" Click="BtnLogout_Click" HorizontalAlignment="Right" Foreground="#FFEC9DFF"/>
        </StackPanel>

        <!-- Основное содержимое корзины -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="Корзина" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

                <!-- Кнопка очистить корзину -->
                <Button Content="Очистить корзину" HorizontalAlignment="Right" Margin="0,0,0,20"
                    Click="ClearCart_Click" Background="#FF8800CC" Foreground="White"/>

                <!-- Список товаров в корзине -->
                <ItemsControl x:Name="CartItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#8800cc" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10" Padding="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Изображение товара -->
                                    <Image Source="{Binding product.CurrentPhoto}" Width="80" Height="80" Grid.Column="0"
                                       Stretch="UniformToFill" Margin="0,0,10,0"/>

                                    <!-- Информация о товаре -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding product.product1}" FontSize="16" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding product.price, StringFormat='Цена: {0:C}'}" FontSize="14"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <Button Content="-" Width="30" Click="DecreaseQuantity_Click" Tag="{Binding id_basket}"/>
                                            <TextBlock Text="{Binding quantity}" Margin="10,0" VerticalAlignment="Center"/>
                                            <Button Content="+" Width="30" Click="IncreaseQuantity_Click" Tag="{Binding id_basket}"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Сумма за товар -->
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding ItemTotal, StringFormat='Сумма: {0:C}'}"
                                               FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Итоговая сумма -->
                <Border BorderBrush="#8800cc" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,20,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="Итого: " FontSize="18" FontWeight="Bold"/>
                        <TextBlock x:Name="TotalAmountText" FontSize="18" FontWeight="Bold" Text="0 руб"/>
                    </StackPanel>
                </Border>

                <!-- Кнопка оформления заказа -->
                <Button Content="Оформить заказ" HorizontalAlignment="Right" Margin="0,20,0,0"
                    Click="Checkout_Click" Background="#FF8800CC" Foreground="White" Padding="20,10"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>