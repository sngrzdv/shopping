<Page x:Class="shop.Pages.UserBasketPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:shop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Корзина">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхнее меню пользователя -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#FFEC9DFF">
            <Button Content="Каталог" Style="{StaticResource MenuButton}" Foreground="#8800cc" Click="Catalog_Click"/>
            <Button Content="Корзина" Style="{StaticResource MenuButton}" Foreground="#8800cc"/>
            <Button Content="Мои заказы" Style="{StaticResource MenuButton}" Foreground="#8800cc"/>
            <Button Content="Выйти" Style="{StaticResource MenuButton}" HorizontalAlignment="Right" Foreground="#8800cc"/>
        </StackPanel>

        <!-- Содержимое корзины -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ListView x:Name="CartListView" Margin="10">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#8800cc" BorderThickness="1" CornerRadius="5" Margin="5" Padding="10" Background="White">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Изображение товара -->
                                <Image Grid.Column="0" Grid.RowSpan="3" Source="{Binding product.CurrentPhoto}" 
                                       Width="80" Height="80" Stretch="Uniform" Margin="5"/>

                                <!-- Название товара -->
                                <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding product.product1}" 
                                           FontWeight="Bold" FontSize="14" Foreground="#8800cc"/>

                                <!-- Описание товара -->
                                <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding product.description}" 
                                           TextWrapping="Wrap" Foreground="#8800cc" Margin="0,5,0,0"/>

                                <!-- Цена за единицу -->
                                <TextBlock Grid.Column="2" Grid.Row="0" Text="{Binding product.price, StringFormat='{}Цена: {0:N} ₽'}" 
                                           Foreground="#8800cc" VerticalAlignment="Center"/>

                                <!-- Количество -->
                                <StackPanel Grid.Column="3" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="-" Width="30" Click="DecreaseQuantity_Click" 
                                            Background="#8800cc" Foreground="White" FontWeight="Bold"/>
                                    <TextBox x:Name="QuantityBox" Text="{Binding quantity}" Width="40" Margin="5,0" 
                                             TextAlignment="Center" VerticalContentAlignment="Center"
                                             LostFocus="QuantityBox_LostFocus"/>
                                    <Button Content="+" Width="30" Click="IncreaseQuantity_Click" 
                                            Background="#8800cc" Foreground="White" FontWeight="Bold"/>
                                </StackPanel>

                                <!-- Удалить -->
                                <Button Grid.Column="4" Grid.Row="0" Content="Удалить" HorizontalAlignment="Right" 
                                        Background="#FF3333" Foreground="White" Margin="5"
                                        Click="RemoveItem_Click"/>

                                <!-- Общая стоимость -->
                                <TextBlock x:Name="TotalSumText" Grid.Column="2" Grid.ColumnSpan="3" Grid.Row="2" 
                                       FontWeight="Bold" Foreground="#8800cc" Margin="0,10,0,0"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>

        <!-- Итого и кнопка оформления -->
        <Border Grid.Row="2" Background="#FFF0E6FF" Padding="10" BorderBrush="#8800cc" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Общая сумма -->
                <TextBlock x:Name="CartTotalText" Grid.Column="1" 
                           FontSize="16" FontWeight="Bold" Foreground="#8800cc" Margin="0,0,20,0"/>

                <Button Grid.Column="2" Content="Оформить заказ" Padding="20,5" Background="#8800cc" Foreground="White" 
                        FontWeight="Bold" Click="Checkout_Click"/>
            </Grid>
        </Border>
    </Grid>
</Page>