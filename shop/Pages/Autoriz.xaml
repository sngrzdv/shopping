<Page x:Class="shop.Pages.Autoriz"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:shop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Autoriz">

    <Grid Background="#FFEC9DFF">
        <Border Background="White" CornerRadius="20" BorderBrush="#8800cc" BorderThickness="2" Padding="10" Margin="170,70,170,70">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                <TextBlock Text="Авторизация" FontSize="24" FontWeight="Bold" 
                  HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#FF8800CC"/>

                <TextBlock Text="Email" Foreground="#FF8800CC"/>
                <TextBox x:Name="txtEmail" BorderBrush="#8800cc"  Margin="0,5,0,0" Background="#FFF6D0FF"/>

                <TextBlock Text="Пароль" Margin="0,10,0,0" Foreground="#FF8800CC"/>
                <PasswordBox x:Name="txtPassword" Margin="0,5,0,0" BorderBrush="#8800cc" Background="#FFF6D0FF"/>

                <TextBlock x:Name="txtError" Foreground="#FF8800CC" Margin="0,10,0,0" 
                   TextWrapping="Wrap" Visibility="Collapsed"/>

                <Button x:Name="BtnLogin" Content="Войти" Margin="0,15,0,5" 
                        Padding="10,5" Click="BtnLogin_Click" Foreground="#FFF6D0FF" Background="#8800cc" BorderBrush="Black" FontWeight="Bold" FontSize="14"/>

                <Button x:Name="BtnRegister" Content="Регистрация" 
                        Padding="10,5" Click="BtnRegister_Click" Foreground="#FFF6D0FF" Background="#8800cc" BorderBrush="Black" FontWeight="Bold" FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>