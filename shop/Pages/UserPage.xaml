<Page x:Class="shop.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:shop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Каталог товаров">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхнее меню пользователя -->
        <StackPanel Grid.ColumnSpan="2" Grid.Row="0" Orientation="Horizontal" Background="#FFEC9DFF">
            <Button Content="Каталог" Style="{StaticResource MenuButton}" Foreground="#8800cc"/>
            <Button Content="Корзина" Style="{StaticResource MenuButton}" Foreground="#8800cc"/>
            <Button Content="Мои заказы" Style="{StaticResource MenuButton}" Foreground="#8800cc"/>
            <Button Content="Выйти" Style="{StaticResource MenuButton}" HorizontalAlignment="Right" Foreground="#8800cc"/>
        </StackPanel>

        <!-- Панель фильтрации -->
        <ScrollViewer Grid.Column="0" Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#FFF0E6FF">
            <StackPanel Margin="5">
                <!-- Все товары -->
                <Button x:Name="BtnAllProducts" Content="Все товары" 
                    Margin="0,0,0,15" Padding="8"
                    Background="#FFF6D0FF" Foreground="#8800cc"
                    BorderBrush="#8800cc" BorderThickness="1"
                    Click="BtnAllProducts_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
                
                <!-- Поиск -->
                <TextBox x:Name="SearchBox" Margin="0,0,0,15" Padding="5" 
                     TextChanged="SearchBox_TextChanged" 
                     Foreground="#8800cc" BorderBrush="#8800cc" 
                     Background="White">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Border CornerRadius="2"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                        </ControlTemplate>
                    </TextBox.Template>
                </TextBox>

                <!-- Сортировка -->
                <ComboBox x:Name="SortComboBox" Margin="0,0,0,15" 
                  Foreground="#8800cc" BorderBrush="#8800cc" 
                  Background="#FFEC9DFF"
                  SelectionChanged="SortComboBox_SelectionChanged" 
                  Height="32">
                    <ComboBox.Template>
                        <ControlTemplate TargetType="ComboBox">
                            <Border CornerRadius="2"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                <Grid>
                                    <ToggleButton x:Name="toggleButton" Focusable="false"/>
                                    <ContentPresenter Content="{TemplateBinding SelectionBoxItem}"
                                        Margin="{TemplateBinding Padding}"/>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </ComboBox.Template>
                    <ComboBoxItem Content="По умолчанию"/>
                    <ComboBoxItem Content="По названию (А-Я)"/>
                    <ComboBoxItem Content="По названию (Я-А)"/>
                    <ComboBoxItem Content="По цене (возрастание)"/>
                    <ComboBoxItem Content="По цене (убывание)"/>
                </ComboBox>

                <!-- Фильтры -->
                <Expander x:Name="DepartmentExpander" Header="Департаменты" 
                          Foreground="#8800cc" IsExpanded="True">
                    <ListView x:Name="DepartmentList" 
                              SelectionChanged="DepartmentList_SelectionChanged" 
                              Background="Transparent" BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding department1}" 
                                           Foreground="#8800cc" Margin="2"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Expander>

                <Expander x:Name="CategoryExpander" Header="Категории" 
                          Foreground="#8800cc" IsExpanded="False">
                    <ListView x:Name="CategoryList" 
                              SelectionChanged="CategoryList_SelectionChanged" 
                              Background="Transparent" BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding category1}" 
                                           Foreground="#8800cc" Margin="2"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Expander>

                <Expander x:Name="TypeExpander" Header="Типы" 
                          Foreground="#8800cc" IsExpanded="False">
                    <ListView x:Name="TypeList" 
                              SelectionChanged="TypeList_SelectionChanged" 
                              Background="Transparent" BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding type1}" 
                                           Foreground="#8800cc" Margin="2"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Expander>
            </StackPanel>
        </ScrollViewer>

        <!-- Список товаров -->
        <ListView x:Name="listItems" Grid.Column="1" Grid.Row="1" Margin="10" 
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                  Background="#FFEC9DFF" 
                  MouseDoubleClick="listItems_MouseDoubleClick">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#8800cc" BorderThickness="2" 
                            CornerRadius="8" Margin="10" Padding="10" 
                            Width="300" Height="380" Background="White">
                        <StackPanel>
                            <Image Source="{Binding CurrentPhoto}" 
                                   Width="270" Height="140" Stretch="Fill" 
                                   Margin="0,1,1,10"/>
                            <TextBlock Text="{Binding product1}" 
                                       FontWeight="Bold" FontSize="16" 
                                       TextAlignment="Center" Foreground="#8800cc"/>
                            <TextBlock Text="Цена:" FontWeight="Bold" 
                                       Foreground="#8800cc"/>
                            <TextBlock Text="{Binding price, StringFormat='{} {0:N} ₽'}" 
                                       Margin="0,0,0,5" Foreground="#8800cc"/>
                            <TextBlock Text="В наличии:" FontWeight="Bold" 
                                       Foreground="#8800cc"/>
                            <TextBlock Text="{Binding quantity}" 
                                       Margin="0,0,0,5" Foreground="#8800cc"/>
                            <Button Content="В корзину" 
                                    Margin="0,10,0,0" Padding="10,5"
                                    Background="#4CAF50" Foreground="White"
                                    FontWeight="SemiBold"
                                    Click="AddToCart_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="4"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
