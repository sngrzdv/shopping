<Page x:Class="shopping.Pages.Registr"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:shopping.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Registr" Height="450">

    <Grid Background="#FFEC9DFF ">
        <Border Background="White" CornerRadius="20" BorderBrush="#8800cc" BorderThickness="2" Padding="1" Margin="160,15,160,15">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Регистрация" FontSize="24" FontWeight="Bold" 
                  HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#8800cc"/>

            <TextBlock Text="Фамилия*" Margin="0,5,0,0" Foreground="#8800cc"/>
            <TextBox x:Name="txtLastName" Background="#FFF6D0FF" BorderBrush="#8800cc"/>

            <TextBlock Text="Имя*" Margin="0,5,0,0" Foreground="#8800cc"/>
            <TextBox x:Name="txtFirstName" Background="#FFF6D0FF" BorderBrush="#8800cc"/>

            <TextBlock Text="Отчество" Margin="0,5,0,0" Foreground="#8800cc"/>
            <TextBox x:Name="txtPatronymic" Background="#FFF6D0FF" BorderBrush="#8800cc"/>

            <TextBlock Text="Email*" Margin="0,5,0,0" Foreground="#8800cc"/>
            <TextBox x:Name="txtEmail" Background="#FFF6D0FF" BorderBrush="#8800cc"/>

            <TextBlock Text="Пароль* (минимум 6 символов)" Margin="0,5,0,0" Foreground="#8800cc"/>
            <PasswordBox x:Name="txtPassword" Background="#FFF6D0FF" BorderBrush="#8800cc"/>

            <TextBlock Text="Подтверждение пароля*" Margin="0,5,0,0" Foreground="#8800cc"/>
            <PasswordBox x:Name="txtConfirmPassword" Background="#FFF6D0FF" BorderBrush="#8800cc"/>

            <TextBlock x:Name="txtError" Foreground="White" Margin="0,10,0,0" 
                   TextWrapping="Wrap" Visibility="Collapsed"/>

            <Button x:Name="BtnRegister" Content="Зарегистрироваться" 
                Margin="0,15,0,5" Padding="10,5" Click="BtnRegister_Click" Foreground="#FFF6D0FF" FontWeight="Bold" FontSize="14" BorderBrush="Black" Background="#8800cc"/>

            <Button x:Name="BtnBack" Content="Назад к авторизации" 
                Padding="10,5" Click="BtnBack_Click" Foreground="#FFF6D0FF" FontWeight="Bold" FontSize="14" BorderBrush="Black" Background="#8800cc"/>

            <TextBlock Text="* - обязательные поля" FontSize="10" Margin="0,10,0,0" 
                   HorizontalAlignment="Right" FontStyle="Italic" Foreground="#8800cc"/>
        </StackPanel>
            </Border>
    </Grid>
</Page>
